{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "module":  "NodeNext",
                            "moduleResolution":  "NodeNext",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "allowSyntheticDefaultImports":  true,
                            "resolveJsonModule":  true,
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "types":  [
                                          "node"
                                      ],
                            "baseUrl":  "."
                        },
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "dist",
                    "node_modules",
                    "../server/**",
                    "../client/**"
                ]
}
