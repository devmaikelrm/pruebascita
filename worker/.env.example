# Variables de entorno para el worker Playwright

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID=

# Base de datos (Neon/Postgres)
DATABASE_URL=

# Widget Bookitit / citaconsular
# Ej: https://www.citaconsular.es/es/hosteds/widgetdefault/XXXXXXXX/bktYYYYY
WIDGET_URL=

# Frecuencia de chequeo (minutos)
CHECK_MIN_MINUTES=6
CHECK_MAX_MINUTES=10

# Anti-bloqueo
# Horas de cooldown para bloqueos por sistema (error-cita.aspx)
COOLDOWN_HOURS=2

# Captcha (auto-then-skip)
# Proveedor opcional: 2captcha|capmonster (si está vacío, se salta y se notifica)
CAPTCHA_PROVIDER=
CAPTCHA_API_KEY=
CAPTCHA_TIMEOUT_SECONDS=45

# Zona horaria
TZ=Europe/Madrid

# Proxy opcional por cuenta/IP (gancho, no activo por defecto)
HTTP_PROXY=
HTTPS_PROXY=

