{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "allowImportingTsExtensions": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}
